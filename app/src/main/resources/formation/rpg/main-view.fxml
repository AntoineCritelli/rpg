<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.text.Text?>
<GridPane fx:controller="formation.rpg.fx.MainController" fx:id="gridD"
          xmlns:fx="http://javafx.com/fxml" hgap="200" vgap="100">


    <Button text="Aller au nord" onAction="#onGoNorth" fx:id="northButton" visible="false"
            GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <Button text="Aller au est" onAction="#onGoEast" fx:id="eastButton" visible="false"
            GridPane.columnIndex="3" GridPane.rowIndex="2"/>
    <Button text="Aller au sud" onAction="#onGoSouth" fx:id="southButton" visible="false"
            GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <Button text="Aller au ouest" onAction="#onGoWest" fx:id="westButton" visible="false"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Button text="start" onAction="#startTheGame" fx:id="startButton"
            GridPane.rowIndex="2" GridPane.columnIndex="2" />
    <Text fx:id="roomText"
          GridPane.columnIndex="2" GridPane.rowIndex="2" />

</GridPane>


